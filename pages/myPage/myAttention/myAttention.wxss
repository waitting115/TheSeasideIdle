.all {
  width: 100%;
  min-height: 100%;
  background: #f2f2f2;
  padding:2% 0 0 0;
  margin:0;
  position: absolute;
}
.item {
  width: 90%;
  height: 170rpx;
  background: #fff;
  margin: 3% 5%;
  border-radius: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.itemLeft {
  width: 70%;
  height: 130rpx;
  padding-left: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.itemHeadImg {
  width: 30%;
  height: 100%;
  margin-right: 5%;
  border-radius: 20rpx;
}
.itemName {
  width: 65%;
  height: 100%;  
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
  align-items: center;          
}
.itemBtn {
  width: 20%;
  font-size: 27rpx;
}