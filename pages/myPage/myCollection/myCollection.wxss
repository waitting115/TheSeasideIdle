.all {
  width: 100%;
  min-height: 750rpx;
  background: #f2f2f2;
  padding: 0;
  margin: 0;
  display: flex;
  flex-flow: row wrap;
  /* position: absolute; */
}
.item {
  width: 100%;
  height: 283rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 4%;
}
.itemTop {
  width: 98%;
  height: 60rpx;
  padding-left: 2%;
  border-bottom: 1px solid #ccc;
}
.itemCenter {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}
.img {
  width: 27%;
  height: 80%;
  margin: 0 5%;
  border-radius: 20rpx;
  border : 1px solid #8c8c8c;
}
.title {
  margin-right: 5%;
}
