.all {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  padding: 0;
  margin: 0;
}
.contentTop {
  width: 100%;
  height: 380rpx;
  
}
.topBar {
 width: 100%;
 height: 50rpx;
 /* border: 1px solid black; */
 margin-top: 1%;
 position: absolute;
}
.iconBar {
  width: 80%;
  height: 110%;
  float: left;
  margin-left: 10%;
  border: 1.5px solid #8c8c8c;
  /* border-radius: 20rpx; */
}
.icon {
  width: 6.5%;
  height: 63%;
  float: left;
  padding: 2%;
}
.input {
  width: 85%;
  height: 100%;
  font-size: 30rpx;
}
.topImg {
  width: 100%;
  height: 100%;
  margin-top: -30rpx;
}
.classify {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  flex-flow: row wrap;
  justify-content: space-around;
  align-items: center;
  align-content: stretch;
}
.classItem {
  width: 23%;
  height: 170rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 20rpx;
  margin-bottom: 2%;
  font-family: serif;
}
.classIcon {
  width: 65%;
  height: 65%;
}
.classTitle {
  width: 100%;
  height: 30%;
  text-align: center;
}
.titleBar {
  width: 100%;
  height: 75rpx;
  border-top: 1.5px solid #ccc;
  margin:2% 0 1% 2%;
  padding-top: 2%;
}
.recommendationContent {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: stretch;
}
.itemContent {
  width: 45%;
  height: 550rpx;
  background-color: #fff;
  border-radius: 20px 20px 0 0;
  overflow: hidden;
  margin-bottom: 5%;
}
.itemPictureContent {
  width: 100%;
  height: 55%;
  overflow: hidden;
}
.itemPicture {
  width: 100%;
  height: 100%;
  text-align: center;
}
.itemIntroduceText {
  width: 100%;
  height: 17%;
  overflow: hidden;
  display: inline-block;
  border-bottom: 1px solid #ccc;
  font-size: 90%;
}
.priceBar {
  width: 100%;
  height: 50rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
}
.itemPrice {
  width: auto;
  height: 100%;
  text-align: left;
  display: inline-block;
  color: #f40;
}
.itemGoodsSituation {
  width: auto;
  height: 100%;
  text-align: right;
  display: inline-block;
}
.headPortraitBar {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.itemHeadPortraitUrl {
  width: 25%;
  height: 80%;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 1% 2%;
  border: 1px solid #8c8c8c;
}
.itemBusinessName {
  width: auto;
  height: 40%;
  font-size: 33rpx;
  margin: 0 0 0 5% ;
  overflow: hidden;
}

.footer {
  width: 100%;
  height: auto;
  border-top: 1px solid #ccc;
  text-align: center;
  color: #8c8c8c;
}