.all {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  padding: 0;
  margin: 0;
}
.swiper {
 width: 100%;
 height: 500rpx;
}
.swiper-item {
  width: 100%;
  height: 100%;
}
.item-img {
  width: 100%;
  height: 100%;
}
.priceBar {
  width: auto;
  height: auto;
  border: 1px solid #ccc;
  background: #fff;
  margin: 3% 0 2% 0;
  padding: 0 5% 0 5%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.price ,.situation{
  width: auto;
  height: auto;
  color: #f40;
  font-size: 50rpx;
}
.situation {
  color: #000;
}
.title ,.introduce{
  width: 100%;
  height: auto;
  margin: 5% 1%;
  padding: 3%;
  font-size: 40rpx;
  background: #fff;
}
.title {
  font-size: 50rpx;
}
.introduce {
  min-height: 315rpx;
  font-size: 40rpx;
  line-height: 45rpx;
  font-family: serif;
  text-indent: 80rpx;
  text-align: left;
}
.tabBar {
  width: 100%;
  height: 11%;
  border: 1px solid #ccc;
  background: #fff;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}
.tabBarItem {
  width: 20%;
  height: auto;      
}
.tabBarImg{
  width: 45%;
  height: 50%;
  margin:10% 20% 5% 20%;
  align-content: center;
}
.tabBarTitle {
  width: 50%;
  height: 25%;
  margin:0 18%;
  font-family: KaiTi;
  font-size: 30rpx;
  color: #6f6f6f;
  text-align: center;

}