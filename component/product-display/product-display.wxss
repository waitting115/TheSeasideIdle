.recommendationContent {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: stretch;
}
.itemContent {
  width: 45%;
  height: 540rpx;
  /* border: 3px solid #ddd; */
  background-color: #fff;
  border-radius: 20px 20px 0 0;
  overflow: hidden;
  margin-bottom: 5%;
}
.itemPictureContent {
  width: 100%;
  height: 55%;
  overflow: hidden;
}
.itemPicture {
  width: 100%;
  height: 100%;
  text-align: center;
}
.itemGoodsTitle {
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  /* display: inline-block; */
  border-bottom: 1px solid #ccc;
  font-size: 90%;
  line-height: 40rpx;
  /* 设置文字溢出省略号代替 */
  display: -webkit-box;
  /* overflow: hidden; */
  text-overflow: ellipsis;/*显示省略符号来代表被修剪的文本。*/
  word-break: break-all;/*	允许在单词内换行*/
  -webkit-box-orient: vertical;/*	从上向下垂直排列子元素。*/
  -webkit-line-clamp:2; /*限制在一个块元素显示的文本的行数*/
}
.priceBar {
  width: 100%;
  height: 50rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
}
.itemPrice {
  width: auto;
  height: 100%;
  text-align: left;
  display: inline-block;
  color: #f40;
}
.itemGoodsSituation {
  width: auto;
  height: 100%;
  text-align: right;
  display: inline-block;
}
.headPortraitBar {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.itemHeadPortraitUrl {
  width: 25%;
  height: 80%;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 0 1% 2%;
  border: 1px solid #8c8c8c;
}
.itemBusinessName {
  width: auto;
  height: 37rpx;
  font-size: 37rpx;
  line-height: 37rpx;
  margin: 0 0 0 5% ;
  overflow: hidden;
    /* 设置文字溢出省略号代替 */
  display: -webkit-box;
  /* overflow: hidden; */
  text-overflow: ellipsis;/*显示省略符号来代表被修剪的文本。*/
  word-break: break-all;/*	允许在单词内换行*/
  -webkit-box-orient: vertical;/*	从上向下垂直排列子元素。*/
  -webkit-line-clamp:1; /*限制在一个块元素显示的文本的行数*/
}
.zu {
  font-size: 0.8rem;
  margin-top: auto;
  margin-bottom: auto;
  color: #f40;
}